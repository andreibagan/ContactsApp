@model IEnumerable<ContactViewModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobilePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("Create", "Contact", null, Context.Request.Scheme)', 'New Contact')" class="btn btn-success text-white"><i class="fas fa-address-book"></i> New Contact</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobilePhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    <div class="row">
                        <a onclick="showInPopup('@Url.Action("Edit", "Contact", new { id = item.Id }, Context.Request.Scheme)', 'Edit Contact')" class="btn btn-primary text-white mr-1"><i class="fas fa-user-edit"></i> Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-danger"><i class="fas fa-user-slash"></i> Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
